<div id="listOfArticles">
    <h2>The Latest Buzz from BuzzFeed</h2>
    <ul id="list-of-articles" class="list-group">
      {{#each articles}}
      <li data-id="{{this.id}}" class="list-group-item">
        <strong>TITLE</strong>
        {{#if img}}
          <img src={{this.img}}>
          {{/if}}
          {{#else}}
          <img src="/assets/images/flower2.png">
          {{/else}}
        <p>{{this.title}}</p>
        <strong>DESCRIPTION</strong>       
                <p>{{this.description}}</p>
         <button id="saveBtn" data-id="{{this.id}}"  class="btn orange darken-2">save</button>


      </li>
      {{/each}}
    </ul>
  </div>

